{
    "name": "remix-demo-by-crystallize",
    "private": true,
    "description": "",
    "license": "MIT",
    "sideEffects": false,
    "scripts": {
        "build": "npm run build:css && remix build",
        "build:css": "tailwindcss -m -i .src/styles/root.css -o src/styles/tailwind.css",
        "dev": "concurrently \"npm run dev:css\" \"PORT=3042 remix dev\"",
        "dev:css": "tailwindcss -w -i ./src/styles/root.css -o src/styles/tailwind.css",
        "start": "remix-serve build"
    },
    "dependencies": {
        "@crystallize/js-api-client": "^0.6.1",
        "@crystallize/reactjs-components": "^0.1.0",
        "@remix-run/node": "^1.5.1",
        "@remix-run/react": "^1.5.1",
        "@remix-run/serve": "^1.5.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.5.1",
        "@remix-run/eslint-config": "^1.5.1",
        "@tailwindcss/forms": "^0.5.2",
        "@types/react": "^17.0.45",
        "@types/react-dom": "^17.0.17",
        "autoprefixer": "^10.4.7",
        "concurrently": "^7.2.1",
        "eslint": "^8.15.0",
        "postcss": "^8.4.14",
        "tailwindcss": "^3.0.24",
        "typescript": "^4.6.4"
    },
    "engines": {
        "node": ">=14"
    }
}
